<cluster xmlns="http://www.globus.org/2008/06/workspace/metadata/logistics">

 <workspace>
   <name>nginx-loadbalancer-master</name>
   <image>ami-b48765dd</image>
   <quantity>1</quantity>
   <nic wantlogin="true">public</nic>
   <ctx>
     <provides>
       <identity/>
       <role>loadbalancer</role>
     </provides>
     <requires>
       <identity/>
       <role name="webapp" hostname="true" pubkey="true" />
       <data name="data"><![CDATA[{'webapp_data':{'serve_path':'/tmp'}, 'loadbalancer_data':{'webapp_port': '80'}}]]></data>
     </requires>
   </ctx>
 </workspace>

 <workspace>
   <name>web-application-slave</name>
   <image>ami-b48765dd</image>
   <quantity>2</quantity>
   <nic wantlogin="true">public</nic>
   <ctx>
     <provides>
       <identity/>
       <role>webapp</role>
     </provides>
     <requires>
       <identity/>
       <data name="data"><![CDATA[{'webapp_data':{'serve_path':'/tmp'}, 'loadbalancer_data':{'webapp_port': '80'}}]]></data>
     </requires>
   </ctx>
 </workspace>

</cluster>
